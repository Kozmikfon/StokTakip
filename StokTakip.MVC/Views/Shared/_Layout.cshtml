@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@(ViewData["Title"] ?? "StokTakip")</title>
    <link rel="icon" href="~/Material/assets/img/favicon.png" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700,900" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link href="~/Material/assets/css/nucleo-icons.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/Material/assets/css/nucleo-svg.css" rel="stylesheet" asp-append-version="true" />
    <link id="pagestyle" href="~/Material/assets/css/material-dashboard.css?v=3.2.0" rel="stylesheet" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body class="g-sidenav-show bg-gray-100">
    <!-- Sidebar -->
    <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-radius-lg fixed-start ms-2 bg-white my-2" id="sidenav-main">
        <div class="sidenav-header px-4 py-3 position-relative">
            <a class="navbar-brand m-0 d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="~/Material/assets/img/logo-ct-dark.png" class="navbar-brand-img" width="26" height="26" alt="logo" />
                <span class="ms-2 text-sm text-dark fw-semibold">StokTakip</span>
            </a>
            <button class="btn btn-link d-xl-none p-0 position-absolute end-0 top-0" id="iconSidenav" aria-label="toggle sidenav">
                <i class="fas fa-times p-3 text-dark opacity-5"></i>
            </button>
        </div>
        <hr class="horizontal dark mt-0 mb-2" />
        <div class="collapse navbar-collapse w-auto" id="sidenav-collapse-main">
            @{
                var cc = ViewContext.RouteData.Values["controller"]?.ToString();
                var ca = ViewContext.RouteData.Values["action"]?.ToString();
                Func<string, string, string> active = (c, a) => (cc == c && (string.IsNullOrEmpty(a) || ca == a)) ? "active bg-gradient-dark text-white" : "text-dark";
            }
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link @active("Home", "Index")" asp-controller="Home" asp-action="Index">
                        <i class="material-symbols-rounded opacity-5">dashboard</i>
                        <span class="nav-link-text ms-1">Ana Sayfa</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @active("Cari", "Index")" asp-controller="Cari" asp-action="Index">
                        <i class="material-symbols-rounded opacity-5">group</i>
                        <span class="nav-link-text ms-1">Cariler</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @active("Malzeme", "Index")" asp-controller="Malzeme" asp-action="Index">
                        <i class="material-symbols-rounded opacity-5">inventory_2</i>
                        <span class="nav-link-text ms-1">Malzemeler</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @active("Depo", "Index")" asp-controller="Depo" asp-action="Index">
                        <i class="material-symbols-rounded opacity-5">warehouse</i>
                        <span class="nav-link-text ms-1">Depolar</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @active("İşlemler", "Index")" asp-controller="Home" asp-action="Index">
                        <i class="material-symbols-rounded opacity-5">dashboard</i>
                        <span class="nav-link-text ms-1">Ana Sayfa</span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="sidenav-footer position-absolute w-100 bottom-0 ">
            <div class="mx-3">
                <a class="btn btn-outline-dark mt-4 w-100" href="https://www.creative-tim.com/learning-lab/bootstrap/overview/material-dashboard" target="_blank">Dokümantasyon</a>
            </div>
        </div>
    </aside>

    <!-- Main -->
    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
        <!-- Top Navbar -->
        <nav class="navbar navbar-main navbar-expand-lg px-0 mx-3 shadow-none border-radius-xl" id="navbarBlur" data-scroll="true">
            <div class="container-fluid py-2 px-3">
                <div class="d-flex align-items-center w-100">
                    <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-auto">
                        <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                        <li class="breadcrumb-item text-sm text-dark active" aria-current="page">@ViewData["Title"]</li>
                    </ol>
                    <ul class="navbar-nav d-flex align-items-center ms-auto">
                        <li class="nav-item d-xl-none ps-3 d-flex align-items-center">
                            <a href="javascript:;" class="nav-link text-body p-0" id="iconNavbarSidenav">
                                <div class="sidenav-toggler-inner">
                                    <i class="sidenav-toggler-line"></i>
                                    <i class="sidenav-toggler-line"></i>
                                    <i class="sidenav-toggler-line"></i>
                                </div>
                            </a>
                        </li>
                        <li class="nav-item px-3 d-flex align-items-center">
                            <a href="javascript:;" class="nav-link text-body p-0">
                                <i class="material-symbols-rounded fixed-plugin-button-nav">settings</i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Page Header (optional) -->
        @if (IsSectionDefined("PageHeader"))
        {
            <div class="container-fluid py-0">
                @RenderSection("PageHeader", required: false)
            </div>
        }

        <!-- Page Content -->
        <div class="container-fluid py-2">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer class="footer py-3">
            <div class="container-fluid">
                <div class="row align-items-center justify-content-lg-between">
                    <div class="col-lg-6 mb-lg-0 mb-2">
                        <div class="text-center text-sm text-muted text-lg-start">
                            © @DateTime.Now.Year, StokTakip
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <ul class="nav nav-footer justify-content-center justify-content-lg-end">
                            <li class="nav-item"><a class="nav-link text-muted" href="https://www.creative-tim.com" target="_blank">Creative Tim</a></li>
                            <li class="nav-item"><a class="nav-link text-muted" href="https://www.creative-tim.com/presentation" target="_blank">About</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </main>

    <!-- Fixed Plugin (optional) -->
    <div class="fixed-plugin">
        <a class="fixed-plugin-button text-dark position-fixed px-3 py-2">
            <i class="material-symbols-rounded py-2">settings</i>
        </a>
        <div class="card shadow-lg">
            <div class="card-header pb-0 pt-3 d-flex justify-content-between align-items-start">
                <div>
                    <h6 class="mb-1">UI Ayarları</h6>
                    <p class="mb-0 text-sm">Görünümü kişiselleştir.</p>
                </div>
                <button class="btn btn-link text-dark p-0 fixed-plugin-close-button">
                    <i class="material-symbols-rounded">clear</i>
                </button>
            </div>
            <hr class="horizontal dark my-1">
            <div class="card-body pt-sm-3 pt-0">
                <div class="mt-2 d-flex">
                    <h6 class="mb-0">Light / Dark</h6>
                    <div class="form-check form-switch ps-0 ms-auto my-auto">
                        <input class="form-check-input mt-1 ms-auto" type="checkbox" id="dark-version" onclick="darkMode(this)">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Core JS -->
    <script src="~/Material/assets/js/core/popper.min.js" asp-append-version="true"></script>
    <script src="~/Material/assets/js/core/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/Material/assets/js/plugins/perfect-scrollbar.min.js" asp-append-version="true"></script>
    <script src="~/Material/assets/js/plugins/smooth-scrollbar.min.js" asp-append-version="true"></script>
    <script src="~/Material/assets/js/plugins/chartjs.min.js" asp-append-version="true"></script>
    <script src="~/Material/assets/js/material-dashboard.min.js" asp-append-version="true"></script>

    <script>
        var win = navigator.platform.indexOf('Win') > -1;
        if (win && document.querySelector('#sidenav-scrollbar')) {
          Scrollbar.init(document.querySelector('#sidenav-scrollbar'), { damping: '0.5' });
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
