@model List<StokTakip.Entities.Dtos.DepoDtos.DepoListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3 px-3 d-flex align-items-center justify-content-between">
                    <h6 class="text-white text-capitalize m-0">Depo Listesi</h6>
                    <a class="btn btn-sm bg-gradient-success mb-0" asp-action="Create">
                        <i class="material-symbols-rounded me-1" style="font-size:18px;">add</i> Yeni Depo
                    </a>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="px-3">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }
                </div>
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Depo Adı</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Açıklama</th>
                                <th class="text-secondary opacity-7 text-end pe-4">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model?.Any() == true)
                            {
                                foreach (var x in Model)
                                {
                                    <tr>
                                        <td><h6 class="mb-0 text-sm">@x.DepoAd</h6></td>
                                        <td><p class="text-xs text-secondary mb-0">@x.Aciklama</p></td>
                                        <td class="align-middle text-end pe-4">
                                            <a class="btn btn-link text-secondary font-weight-bold text-xs me-2" asp-action="Details" asp-route-id="@x.Id">Detay</a>
                                            <a class="btn btn-link text-info font-weight-bold text-xs me-2" asp-action="Edit" asp-route-id="@x.Id">Düzenle</a>
                                            <form asp-action="Delete" asp-route-id="@x.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-link text-danger font-weight-bold text-xs" onclick="return confirm('Silinsin mi?');">Sil</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="3" class="text-center py-4 text-muted">Kayıt yok.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

