@model StokTakip.Entities.Dtos.CariDtos.CariDto
@{
    ViewData["Title"] = "Cari Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="mb-3">@ViewData["Title"]</h2>

<div class="card p-3">
    <div class="row mb-2">
        <div class="col-md-6"><strong>Ünvan:</strong> @Model.Unvan</div>
        <div class="col-md-6"><strong>Telefon:</strong> @Model.Telefon</div>
    </div>
    <div class="row mb-2">
        <div class="col-md-6"><strong>Mail:</strong> @Model.Email</div>
        <div class="col-md-6"><strong>Vergi No:</strong> @Model.VergiNo</div>
    </div>
    <div class="row mb-2">
        <div class="col-md-6"><strong>Vergi Dairesi:</strong> @Model.VergiDairesi</div>
    </div>
    <div class="mb-2">
        <strong>Adres:</strong>
        <div>@Model.Adres</div>
    </div>
</div>

<p class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Listeye Dön</a>
</p>
