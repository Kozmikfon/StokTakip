@model List<StokTakip.Entities.Dtos.CariDtos.CariListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<p>
    <a class="btn btn-primary" asp-controller="Cari" asp-action="Create">Yeni Cari</a>
</p>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Ünvan</th>
            <th>Telefon</th>
            <th>Mail</th>
            <th>Vergi No</th>
            <th style="width:180px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Any() == true)
        {
            foreach (var x in Model)
            {
                <tr>
                    <td>@x.Unvan</td>
                    <td>@x.Telefon</td>
                    <td>@x.Email</td>
                    <td>@x.VergiNo</td>
                    <td>
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@x.Id">Detay</a>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@x.Id">Düzenle</a>
                        <form asp-action="Delete" asp-route-id="@x.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Silinsin mi?');">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="5" class="text-muted">Kayıt yok.</td></tr>
        }
    </tbody>
</table>


