@model StokTakip.Entities.Dtos.DepoTransferDtos.DepoTransferDto

@{
    ViewData["Title"] = "Transfer Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-danger">Transferi Sil</h2>

<div class="alert alert-danger">
    Bu transferi silmek üzeresiniz. Devam etmek istediğinize emin misiniz?
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Transfer No</dt>
            <dd class="col-sm-9">@Model.TransferNo</dd>

            <dt class="col-sm-3">Kaynak Depo</dt>
            <dd class="col-sm-9">@Model.KaynakDepoAdi</dd>

            <dt class="col-sm-3">Hedef Depo</dt>
            <dd class="col-sm-9">@Model.HedefDepoAdi</dd>

            <dt class="col-sm-3">Tarih</dt>
            <dd class="col-sm-9">@Model.TransferTarihi.ToString("dd.MM.yyyy")</dd>

            <dt class="col-sm-3">Seri No</dt>
            <dd class="col-sm-9">@Model.SeriNo</dd>

            <dt class="col-sm-3">Açıklama</dt>
            <dd class="col-sm-9">@Model.Aciklama</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
    <button class="btn btn-danger" type="submit">Sil</button>
    <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@Model.Id">Vazgeç</a>
</form>
