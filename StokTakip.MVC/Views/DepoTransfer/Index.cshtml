@model List<StokTakip.Entities.Dtos.DepoTransferDtos.DepoTransferListDto>
@{
    ViewData["Title"] = "Depo Transfer İşlemleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div class="mb-3">
    <a class="btn btn-primary" asp-action="Create">Yeni Transfer</a>
</div>

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Transfer No</th>
            <th>Kaynak</th>
            <th>Hedef</th>
            <th>Tarih</th>
            <th>Oluşturulma</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.TransferNo</td>
                <td>@x.KaynakDepoAdi</td>
                <td>@x.HedefDepoAdi</td>
                <td>@x.TransferTarihi.ToString("dd.MM.yyyy")</td>
                <td>@x.CreatedTime.ToString("dd.MM.yyyy HH:mm")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@x.Id">Detay</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@x.Id">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
