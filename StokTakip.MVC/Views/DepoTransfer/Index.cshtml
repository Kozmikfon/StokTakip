@model List<StokTakip.Entities.Dtos.DepoTransferDtos.DepoTransferListDto>
@{
    ViewData["Title"] = "Depo Transfer İşlemleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-primary mb-3">+ Yeni Transfer Ekle</a>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Transfer No</th>
            <th>Kaynak Depo</th>
            <th>Hedef Depo</th>
            <th>Transfer Tarihi</th>
            <th>Seri No</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.TransferNo</td>
                    <td>@item.KaynakDepoAdi</td>
                    <td>@item.HedefDepoAdi</td>
                    <td>@item.TransferTarihi.ToString("dd-MM-yyyy")</td>
                    <td>@item.SeriNo</td>
                    <td>@item.Aciklama</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detaylar</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Güncelle</a>

                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Bu transfer kaydını silmek istediğinize emin misiniz?');">
                                Sil
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center text-muted">Hiç transfer kaydı bulunamadı.</td>
            </tr>
        }
    </tbody>
</table>
