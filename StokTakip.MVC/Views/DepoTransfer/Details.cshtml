@model StokTakip.Entities.Dtos.DepoTransferDtos.DepoTransferDto
@{
    ViewData["Title"] = "Detaylar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<dl class="row">
    <dt class="col-sm-2">Durum</dt>
    <dd class="col-sm-10">@Model.Durum</dd>

    <dt class="col-sm-2">Kaynak</dt>
    <dd class="col-sm-10">@Model.KaynakDepoAdi (@Model.KaynakDepoId)</dd>

    <dt class="col-sm-2">Hedef</dt>
    <dd class="col-sm-10">@Model.HedefDepoAdi (@Model.HedefDepoId)</dd>

    <dt class="col-sm-2">Tarih</dt>
    <dd class="col-sm-10">@Model.TransferTarihi.ToString("dd.MM.yyyy")</dd>

    <dt class="col-sm-2">Açıklama</dt>
    <dd class="col-sm-10">@Model.Aciklama</dd>
</dl>

@await Html.PartialAsync("_Lines", Model.Detaylar)

<div class="mt-3">
    <a class="btn btn-outline-secondary" asp-action="Index">Listeye Dön</a>
</div>

