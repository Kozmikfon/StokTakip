@model List<StokTakip.Entities.Dtos.MalzemeDtos.MalzemeListDto>
@{
    ViewData["Title"] = "Malzeme Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="mb-3">@ViewData["Title"]</h2>

<p>
    <a class="btn btn-primary" asp-controller="Malzeme" asp-action="Create">Yeni Malzeme</a>
</p>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Birim</th>
            <th>Kategori</th>
            <th>Min Stok</th>
            <th>Barkod</th>
            <th>Durum</th>
            <th style="width:120px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Any() == true)
        {
            foreach (var x in Model)
            {
                <tr>
                    <td>@x.malzemeAdi</td>
                    <td>@x.birim</td>
                    <td>@x.kategori</td>
                    <td>@x.minStokMiktar</td>
                    <td>@x.barkodNo</td>
                    <td>
                        @if (x.aktifPasif)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Pasif</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-sm btn-outline-secondary"
                           asp-controller="Malzeme"
                           asp-action="Details"
                           asp-route-id="@(x.Id)">
                            Detay
                        </a>
                        <form asp-action="Delete" asp-route-id="@(x.Id)" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                    onclick="return confirm('Bu malzemeyi silmek istediğinize emin misiniz?');">
                                Sil
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="7" class="text-muted">Kayıt yok.</td></tr>
        }
    </tbody>
</table>
