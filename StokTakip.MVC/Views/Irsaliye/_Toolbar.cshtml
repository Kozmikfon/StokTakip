@model StokTakip.Entities.ViewModels.IrsaliyePageVm
@{
    var isOnayli = Model.IsOnayli;
}
<div class="d-flex gap-2">
    <!-- Kaydet -->
    <form asp-action="Save" asp-controller="Irsaliye" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="PostModel.Id" />
        <button type="submit" class="btn btn-primary" disabled="@isOnayli">Kaydet (Taslak)</button>
    </form>

    <!-- Talep Oluştur -->
    <form asp-action="TalepOlustur" asp-controller="Irsaliye" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.PostModel.Id" />
        <button type="submit" class="btn btn-success" disabled="@isOnayli">Talep Oluştur (Onayla)</button>
    </form>

    <!-- Sil -->
    <form asp-action="Delete" asp-controller="Irsaliye" method="post" class="d-inline" onsubmit="return confirm('Silinsin mi?');">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.PostModel.Id" />
        <button type="submit" class="btn btn-outline-danger" disabled="@isOnayli">Sil</button>
    </form>

    <a class="btn btn-outline-secondary" href="@Url.Action("Index", "Irsaliye")">Liste</a>
    <a class="btn btn-outline-primary" target="_blank" href="@Url.Action("Print", "Irsaliye", new { id = Model.PostModel.Id })">Yazdır</a>
</div>
