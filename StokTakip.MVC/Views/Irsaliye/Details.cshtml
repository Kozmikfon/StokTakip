@using StokTakip.Entities.Dtos.IrsaliyeDetayDtos
@model StokTakip.Entities.Dtos.IrsaliyeDtos.IrsaliyeDto


@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var h=Model.Irsaliye;   
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>@ViewData["Title"]</h3>
    <div>
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@h.Id">Düzenle</a>
        <a class="btn btn-secondary" asp-action="Index">Liste</a>
    </div>
</div>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card mb-3">
    <div class="card-body row g-3">
        <div class="col-md-3"><strong>No:</strong> @h.irsaliyeNo</div>
        <div class="col-md-3"><strong>CariId:</strong> @h.carId</div>
        <div class="col-md-3"><strong>Tarih:</strong> @h.irsaliyeTarihi.ToString("dd.MM.yyyy")</div>
        <div class="col-md-3"><strong>DepoId:</strong> @h.depoId</div>
        <div class="col-md-3"><strong>Tip:</strong> @h.irsaliyeTipi</div>
        <div class="col-md-3"><strong>Durum:</strong> @(h.durum ? "Aktif" : "Pasif")</div>
        <div class="col-md-12"><strong>Açıklama:</strong> @h.aciklama</div>
    </div>
</div>

<h5>Satırlar</h5>
<table class="table table-sm table-bordered align-middle">
    <thead>
        <tr>
            <th>Malzeme</th>
            <th class="text-end">Miktar</th>
            <th class="text-end">Birim Fiyat</th>
            <th class="text-end">Ara Toplam</th>
            <th>Seri No</th>
            <th style="width:110px"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Detaylar == null || !Model.Detaylar.Any())
        {
            <tr><td colspan="6" class="text-center text-muted">Satır yok.</td></tr>
        }
        else
        {
            foreach (var d in Model.Detaylar)
            {
                <tr>
                    <td>@(d.malzemeAdi ?? d.malzemeId.ToString())</td>
                    <td class="text-end">@d.miktar</td>
                    <td class="text-end">@d.birimFiyat.ToString("N2")</td>
                    <td class="text-end">@d.araToplam.ToString("N2")</td>
                    <td>@d.seriNo</td>
                    <td class="text-end">
                        <form asp-controller="IrsaliyeDetay" asp-action="Delete" method="post"
                              onsubmit="return confirm('Satır silinsin mi?');">
                            <input type="hidden" name="irsaliyeId" value="@h.Id" />
                            <input type="hidden" name="detayId" value="@d.Id" />   @* <— ARTIK d.Id *@
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                        </form>

                    </td>
                </tr>
            }
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3" class="text-end">Toplam:</th>
            <th class="text-end">@h.toplamTutar.ToString("N2")</th>
            <th colspan="2"></th>
        </tr>
    </tfoot>
</table>

<hr />

<h5>Yeni Satır Ekle</h5>
<form asp-controller="IrsaliyeDetay" asp-action="Create" method="post" class="row g-2">
    <input type="hidden" name="irsaliyeId" value="@h.Id" />
    @Html.AntiForgeryToken()

    <div class="col-md-4">
        <label class="form-label">Malzeme</label>
        <select name="malzemeId" class="form-select" required>
            @* ViewBag.Malzemeler ile doldur (Details GET’te doldur) *@
        </select>
    </div>
    <div class="col-md-2">
        <label class="form-label">Miktar</label>
        <input name="miktar" type="number" step="0.001" min="0" class="form-control" required />
    </div>
    <div class="col-md-2">
        <label class="form-label">Birim Fiyat</label>
        <input name="birimFiyat" type="number" step="0.01" min="0" class="form-control" required />
    </div>
    <div class="col-md-3">
        <label class="form-label">Seri No</label>
        <input name="seriNo" class="form-control" />
    </div>
    <div class="col-md-1 d-flex align-items-end">
        <button type="submit" class="btn btn-primary w-100">Ekle</button>
    </div>
</form>

