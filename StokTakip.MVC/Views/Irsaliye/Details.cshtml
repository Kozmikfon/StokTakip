@model StokTakip.Entities.Dtos.IrsaliyeDtos.IrsaliyeDto
@using StokTakip.Entities.Enums
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<div class="container py-3">
    <div class="d-flex justify-content-between align-items-center">
        <h3>
            İrsaliye Detay
            <span class="badge @(Model.durum == IrsaliyeDurumu.Onayli ? "bg-success" : "bg-secondary")">
                @(Model.durum == IrsaliyeDurumu.Onayli ? "Onaylı" : "Taslak")
            </span>
        </h3>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" href="@Url.Action("Index", "Irsaliye")">Listeye Dön</a>
            <a class="btn btn-primary" href="@Url.Action("Edit", "Irsaliye", new { id = Model.Id })">Düzenle</a>
            <a class="btn btn-outline-primary" target="_blank" href="@Url.Action("Print", "Irsaliye", new { id = Model.Id })">Yazdır</a>
        </div>
    </div>

    <div class="card p-3 mt-3">
        <div class="row g-3">
            <div class="col-md-3"><strong>İrsaliye No:</strong> @Model.irsaliyeNo</div>
            <div class="col-md-3"><strong>Cari:</strong> @(Model.cariAd ?? Model.carId.ToString())</div>
            <div class="col-md-3"><strong>Depo:</strong> @(Model.depoAd ?? Model.depoId.ToString())</div>
            <div class="col-md-3"><strong>Tarih:</strong> @Model.irsaliyeTarihi.ToString("g")</div>
            <div class="col-md-3"><strong>Tip:</strong> @Model.irsaliyeTipi</div>
            <div class="col-md-9"><strong>Açıklama:</strong> @Model.aciklama</div>
        </div>
    </div>

    @await Html.PartialAsync("_DetayGrid", Model)
</div>

