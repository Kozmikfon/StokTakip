@model List<StokTakip.Entities.Dtos.IrsaliyeDtos.IrsaliyeListDto>
@using StokTakip.Entities.Enums
@{
    ViewData["Title"] = "İrsaliye Listeleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-3">
    <div class="d-flex justify-content-between align-items-center">
        <h3>İrsaliyeler</h3>
        <a class="btn btn-primary" href="@Url.Action("Edit", "Irsaliye")">Yeni İrsaliye</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger mt-3">@TempData["Error"]</div>
    }

    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>No</th>
                <th>Tarih</th>
                <th>Tip</th>
                <th>Durum</th>
                <th class="text-end">Toplam</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.irsaliyeNo</td>
                    <td>@i.irsaliyeTarihi.ToString("g")</td>
                    <td>@i.irsaliyeTipi</td>
                    <td>
                        <span class="badge @(i.durum == IrsaliyeDurumu.Onayli ? "bg-success" : "bg-secondary")">
                            @(i.durum == IrsaliyeDurumu.Onayli ? "Onaylı" : "Taslak")
                        </span>
                    </td>
                    <td class="text-end">@i.toplamTutar?.ToString("0.00")</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Edit", "Irsaliye", new { id = i.Id })">Aç</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


