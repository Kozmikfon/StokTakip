@using Microsoft.AspNetCore.Mvc.Rendering
@using System.Linq
@using StokTakip.Entities.Dtos.IrsaliyeDtos
@model IrsaliyeCreateDto

@{
    ViewData["Title"] = "Yeni İrsaliye";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var cariler    = ViewBag.Cariler    as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
    var depolar    = ViewBag.Depolar    as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
    var malzemeler = ViewBag.Malzemeler as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
}

<h3 class="mb-3">@ViewData["Title"]</h3>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    <div class="card mb-3">
        <div class="card-body row g-3">

            <div class="col-md-3">
                <label asp-for="IrsaliyeNo" class="form-label"></label>
                <input asp-for="IrsaliyeNo" class="form-control" />
                <span asp-validation-for="IrsaliyeNo" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="CarId" class="form-label">cariler</label>
                <select asp-for="CarId" class="form-select" asp-items="cariler">
                    <option value="">-- Seçin --</option>
                </select>
                <span asp-validation-for="CarId" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="IrsaliyeTarihi" class="form-label"></label>
                <input asp-for="IrsaliyeTarihi" type="date" class="form-control" />
                <span asp-validation-for="IrsaliyeTarihi" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="DepoId" class="form-label">depolar</label>
                <select asp-for="DepoId" class="form-select" asp-items="depolar">
                    <option value="">-- Seçin --</option>
                </select>
                <span asp-validation-for="DepoId" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="IrsaliyeTipi" class="form-label"></label>
                <select asp-for="IrsaliyeTipi" class="form-select"
                        asp-items="Html.GetEnumSelectList<StokTakip.Entities.Enums.IrsaliyeTipi>()">
                    <option value="">-- Seçin --</option>
                </select>
                <span asp-validation-for="IrsaliyeTipi" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Aciklama" class="form-label"></label>
                <input asp-for="Aciklama" class="form-control" />
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>

            <div class="col-md-3 d-flex align-items-center">
                <div class="form-check mt-4">
                    <input asp-for="Durum" class="form-check-input" />
                    <label asp-for="Durum" class="form-check-label"></label>
                </div>
                <span asp-validation-for="Durum" class="text-danger ms-2"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="ToplamTutar" class="form-label"></label>
                <input asp-for="ToplamTutar" class="form-control" readonly />
                <div class="form-text">Detaylardan (Entry ekranında) otomatik hesaplanacak.</div>
            </div>

        </div>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">Kaydet ve Detaylara Geç</button>
        <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
