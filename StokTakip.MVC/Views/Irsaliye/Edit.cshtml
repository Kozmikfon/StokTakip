@using StokTakip.Entities.Dtos.IrsaliyeDtos
@using StokTakip.Entities.Dtos.IrsaliyeDetayDtos
@model IrsaliyeUpdateDto
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@ViewData["Title"]</h3>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="card mb-3">
        <div class="card-body row g-3">
            <div class="col-md-3">
                <label asp-for="DepoId" class="form-label">Depo</label>
                <select asp-for="DepoId" class="form-select" asp-items="ViewBag.Depolar"></select>
                <span asp-validation-for="DepoId" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Tarih" class="form-label"></label>
                <input asp-for="Tarih" type="date" class="form-control" />
                <span asp-validation-for="Tarih" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="IrsaliyeTipi" class="form-label"></label>
                <select asp-for="IrsaliyeTipi" class="form-select" asp-items="Html.GetEnumSelectList<StokTakip.Entities.Enums.IrsaliyeTipi>()"></select>
                <span asp-validation-for="IrsaliyeTipi" class="text-danger"></span>
            </div>
        </div>
    </div>

    <h5>Satırlar</h5>
    <table class="table table-sm table-bordered align-middle" id="detayTable">
        <thead>
            <tr>
                <th style="width:40%">Malzeme</th>
                <th class="text-end" style="width:15%">Miktar</th>
                <th class="text-end" style="width:15%">Birim Fiyat</th>
                <th style="width:25%">Seri No</th>
                <th style="width:5%"></th>
            </tr>
        </thead>
        <tbody>
            @{
                var count = Model.Detaylar?.Count ?? 0;
                for (int i = 0; i < count; i++)
                {
                    <tr>
                        <td>
                            <select class="form-select" name="Detaylar[@i].malzemeId" required asp-items="ViewBag.Malzemeler"></select>
                        </td>
                        <td>
                            <input class="form-control text-end miktar" name="Detaylar[@i].miktar" type="number" step="0.001" min="0" value="@Model.Detaylar[i].miktar" required />
                        </td>
                        <td>
                            <input class="form-control text-end fiyat" name="Detaylar[@i].birimFiyat" type="number" step="0.01" min="0" value="@Model.Detaylar[i].birimFiyat" required />
                        </td>
                        <td>
                            <input class="form-control" name="Detaylar[@i].seriNo" value="@Model.Detaylar[i].seriNo" />
                        </td>
                        <td class="text-center">
                            <button type="button" class="btn btn-sm btn-outline-danger remove-row">&times;</button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="d-flex gap-2 mb-3">
        <button type="button" id="addRow" class="btn btn-outline-primary">Satır Ekle</button>
        <button type="submit" class="btn btn-success ms-auto">Kaydet</button>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Vazgeç</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function(){
            const tbody = document.querySelector('#detayTable tbody');
            const addBtn = document.getElementById('addRow');

            function bindRowEvents(tr){
                const remove = tr.querySelector('.remove-row');
                if(remove){
                    remove.addEventListener('click', ()=>{ tr.remove(); renumber(); });
                }
            }
            function renumber(){
                const rows = tbody.querySelectorAll('tr');
                rows.forEach((tr, i)=>{
                    tr.querySelectorAll('select, input').forEach(el=>{
                        ['name','id'].forEach(attr=>{
                            if(el.hasAttribute(attr)){
                                el.setAttribute(attr, el.getAttribute(attr).replace(/\Detaylar\[\d+\]/, 'Detaylar['+i+']'));
                            }
                        });
                    });
                });
            }
            addBtn?.addEventListener('click', ()=>{
                const i = tbody.querySelectorAll('tr').length;
                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td>
                        <select class="form-select" name="Detaylar[${i}].malzemeId" required>
                            ${(document.querySelector('select[name^="Detaylar[0].malzemeId"]')?.innerHTML) || ''}
                        </select>
                    </td>
                    <td><input class="form-control text-end miktar" name="Detaylar[${i}].miktar" type="number" step="0.001" min="0" required /></td>
                    <td><input class="form-control text-end fiyat" name="Detaylar[${i}].birimFiyat" type="number" step="0.01" min="0" required /></td>
                    <td><input class="form-control" name="Detaylar[${i}].seriNo" /></td>
                    <td class="text-center"><button type="button" class="btn btn-sm btn-outline-danger remove-row">&times;</button></td>`;
                tbody.appendChild(tr);
                bindRowEvents(tr);
            });

            document.querySelectorAll('#detayTable tbody tr').forEach(bindRowEvents);
        })();
    </script>
}

